<!DOCTYPE html>
<html>
  <head>
    <title>Transaction Application</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Transaction Application</h1>
    <p>Welcome to the Transaction Application</p>
    <h2>All Transactions</h2>
    <table>
      <tr>
        <th>Description</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Edit</th>
      </tr>
      <% transactions.map(transaction => {%>
      <tr>
        <td><%= transaction.description %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.category %></td>
        <td><%= new Date(transaction.date).toLocaleString('en-US', {month: '2-digit', day: 'numeric', year: 'numeric'})  %></td>
        <td></td>
        <td></td>
      </tr>
      <% }) %>
    </table>
    <h2>Add Transaction<h2>
    <form method="POST" action="/">
      <table>
        <tr>
          <th>Description</th>
          <th>Category</th>
          <th>Amount</th>
          <th>Date</th>
          <th>Submit</th>
        </tr>
        <tr>
          <td><input type="text" id="description" name="description" placeholder="Kentucky Fried Chicken" required></td>
          <td><input type="text" id="category" name="category" placeholder="Fast Food" required></td>
          <td><input type="text" id="amount" name="amount" placeholder="12.99" required></td>
          <td><input type="text" id="date" name="date" placeholder="MM/DD/YYYY" required></td>
          <td><input type="submit" value="Store"></td>
        </tr>
      </table>
    </form>
  </body>
</html>
